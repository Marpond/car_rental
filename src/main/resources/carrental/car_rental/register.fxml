<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="carrental.car_rental.RegisterController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox fx:id="hBox1" prefHeight="64.0" prefWidth="600.0" spacing="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="vBox1" mnemonicParsing="false" onAction="#switchToLogin" text="Back To Login" />
                  <Label text="Create New Account">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </top>
         <left>
            <VBox fx:id="vBox1" prefHeight="222.0" prefWidth="140.0" spacing="15.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="Name">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Phone Number">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Address">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Username">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Password">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </left>
         <bottom>
            <HBox fx:id="hBox2" prefHeight="114.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#createAccount" text="Confirm details">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="20.0" left="200.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
         <center>
            <VBox fx:id="vBox2" prefHeight="222.0" prefWidth="454.0" spacing="15.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <children>
                  <TextField fx:id="nameTF" prefHeight="25.0" prefWidth="223.0" />
                  <TextField fx:id="phoneTF" />
                  <TextField fx:id="addressTF" />
                  <TextField fx:id="usernameTF" />
                  <TextField fx:id="passwordTF" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </center>
         <right>
            <VBox prefHeight="222.0" prefWidth="227.0" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
</AnchorPane>
